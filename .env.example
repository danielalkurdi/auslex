# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG=your_openai_org_id_here
OPENAI_PROJECT=your_openai_project_id_here

# Optional OpenAI Configuration
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_FALLBACK_MODEL=gpt-4o-mini
OPENAI_ENABLE_FALLBACK=1

# CORS Configuration for Production
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://your-custom-domain.com

# Security Configuration
JWT_SECRET_KEY=your_secure_jwt_secret_key_here

# React App Configuration (for frontend)
REACT_APP_API_ENDPOINT=

# Note: In production on Vercel, leave REACT_APP_API_ENDPOINT empty to use relative paths