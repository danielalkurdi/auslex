{
  "version": 2,
  "builds": [
    { "src": "build/**", "use": "@vercel/static" },
    { "src": "api/index.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api", "dest": "/api/index.py" },
    { "src": "/api/", "dest": "/api/index.py" },
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/build/index.html" }
  ]
}